<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/main_keyword_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/main_home_iv"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="@id/main_keyword_iv"
        app:layout_constraintEnd_toStartOf="@id/main_keyword_iv"
        app:layout_constraintTop_toTopOf="@id/main_keyword_iv" />

    <ImageView
        android:id="@+id/main_keyword_iv"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/keywordbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/main_profile_iv"
        android:layout_width="145dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="@id/main_keyword_iv"
        app:layout_constraintBottom_toBottomOf="@id/main_keyword_iv"
        app:layout_constraintStart_toEndOf="@id/main_keyword_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>